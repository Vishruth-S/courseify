            <div class="main-form">
                <div class="main-container" id="container">
                    <div class="form-container sign-up-container">
                        <form action="/register" id="form" method="POST" class="signup-form validated-form" novalidate>
                            <h1>Create an Account</h1>
                            <span>It's free and simple :)</span>
                            <input class="signup-input form-control" type="text" id="name" name="name"
                                placeholder="Your name" required>
                            <!-- <div class="valid-feedback">
                    Looks good!
                </div> -->
                            <input class="signup-input form-control" type="text" id="username" name="username"
                                placeholder="Set a username" required>
                            <input class="signup-input form-control" type="email" id="email" placeholder="Your email"
                                name="email">
                            <input class="signup-input form-control" type="password" id="password" name="password"
                                placeholder="Set a password" required>
                            <button type="submit">Sign Up</button>
                        </form>
                    </div>
                    <div class="form-container sign-in-container">
                        <form action="/login" class="validated-form signup-form" method="POST" novalidate>
                            <h1>Login</h1>
                            <input class="signup-input form-control" type="text" id="username" name="username"
                                placeholder="username" required>
                            <input class="signup-input form-control" type="password" type="password" id="password"
                                name="password" placeholder="password" required>
                            <button>Login</button>
                        </form>
                    </div>
                    <div class="overlay-container">
                        <div class="overlay">
                            <div class="overlay-panel overlay-left">
                                <h1>Welcome Back!</h1>
                                <p>To keep connected with us please login</p>
                                <button class="ghost" id="signIn">Login</button>
                            </div>
                            <div class="overlay-panel overlay-right">
                                <h1>Hello, Friend!</h1>
                                <p>Don't have an account? Sign up now and start your journey with us</p>
                                <button class="ghost" id="signUp">Sign Up</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <script>
                const signUpButton = document.getElementById('signUp');
                const signInButton = document.getElementById('signIn');
                const container = document.getElementById('container');

                signUpButton.addEventListener('click', () => {
                    container.classList.add("right-panel-active");
                });

                signInButton.addEventListener('click', () => {
                    container.classList.remove("right-panel-active");
                });

            </script>
