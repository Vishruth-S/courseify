<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Courseify</title>
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/user.css">
    <script src="https://kit.fontawesome.com/f9cc6eebb4.js" crossorigin="anonymous"></script>
</head>

<body class="d-flex flex-column show-prfile">
    <%- include('../partials/navbar') %>

        <main class="container mt-5">
            <%- include('../partials/flash') %>
                <div class="row">
                    <div class="col-md-4 profile-card">
                        <div> <img class="profile-image-show mt-3"
                                src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT8k_AxFJaWvw6FtipmfO2E_NzisQPk4ohXNw&usqp=CAU"
                                alt=""> </div>
                        <h1 class="mt-3">
                            <%= user. name %>
                        </h1>
                        <% if(currentUser && currentUser._id.equals(user._id)) { %>
                            <h4>Your username: <%= user.username %>
                            </h4>
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <% if(courses.length>= 1) { %>
                            <% if(currentUser && currentUser._id.equals(user._id)) { %>
                                <h2 class="mb-3">Courses taught by Me</h2>
                                <% } else { %>
                                    <h2 class="mb-3">Courses taught by <%=user.name%>
                                    </h2>
                                    <% } %>
                                        <div class="row row-cols-1 row-cols-lg-3 g-4">
                                            <% courses.forEach(course=>{ %>
                                                <div class="col">
                                                    <div class="card">
                                                        <img class="img-fluid card-img-top " src="<%= course.image%>"
                                                            alt="">
                                                        <div class="card-body ">
                                                            <div class="row">
                                                                <div class="col-7">
                                                                    <div class="card-course-main">
                                                                        <h5 class="card-title">
                                                                            <%= course.title %>
                                                                        </h5>
                                                                        <p class="text-muted">
                                                                            <%= course.author.name %>
                                                                        </p>
                                                                    </div>
                                                                    <p>
                                                                        <%= course.enrollers.length %> enrolled
                                                                    </p>
                                                                </div>

                                                            </div>

                                                            <a class="btn red-btn" href="/courses/<%=course.id %>">View
                                                                Course</a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% }) %>
                                        </div>
                                        <% } %>
                                            <% if(currentUser && currentUser._id.equals(user._id)) { %>
                                                <h2 class="my-3">My enrolled courses</h2>
                                                <% if(user.myCourses.length< 1) { %>
                                                    <h4>Ooh looks like it's quite empty here. Check out our courses
                                                    </h4>
                                                    <a href="/courses"><button class="btn red-btn">Go to
                                                            Courses</button></a>
                                                    </h2>
                                                    <% } else { %>
                                                        <div class="row row-cols-1 row-cols-lg-3 g-4">
                                                            <% user.myCourses.forEach(course=>{ %>
                                                                <div class="col">
                                                                    <div class="card ">
                                                                        <div class="">
                                                                            <img class="img-fluid user-page-img"
                                                                                src="<%= course.image%>" alt="">
                                                                        </div>
                                                                        <div class="card-body card-usershow">
                                                                            <div class="row">
                                                                                <div class="col-7">
                                                                                    <h5 class="card-title">
                                                                                        <%= course.title %>
                                                                                    </h5>
                                                                                    <p class="text-muted">
                                                                                        <%= course.author.name %>
                                                                                    </p>
                                                                                </div>

                                                                            </div>

                                                                            <a class="btn red-btn"
                                                                                href="/courses/<%=course.id %>">Go to
                                                                                Course</a>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% }) %>
                                                        </div>
                                                        <% }} %>

                    </div>
                </div>
        </main>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
            integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
            integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
            crossorigin="anonymous"></script>
        <script src='/scripts/validateForms.js'>
        </script>
        <%- include('../partials/footer')%>
</body>

</html>